{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the webpage to be scraped."
    },
    "wait_for_selector": {
      "type": "string",
      "description": "CSS selector that must be present before scraping begins.",
      "minLength": 1
    },
    "selectors": {
      "type": "array",
      "description": "An array of objects, each containing a CSS selector, its associated artifact type, and data extraction details.",
      "items": {
        "type": "object",
        "properties": {
          "selector": {
            "type": "string",
            "description": "The CSS selector used to scrape data.",
            "minLength": 1
          },
          "artifact_type": {
            "type": "string",
            "enum": [
              "Product",
              "Url"
            ],
            "description": "The type of artifact to be created from the data associated with this selector."
          },
          "artifact_attribute": {
            "type": "string",
            "description": "The attribute of artifact to be created from the data associated with this selector."
          },
          "extract_from": {
            "type": "string",
            "enum": [
              "text",
              "attribute"
            ],
            "description": "Indicates whether to extract data from the element's text content or from an HTML attribute."
          },
          "attribute_name": {
            "type": "string",
            "description": "The name of the HTML attribute from which to extract data, required if 'extract_from' is 'attribute'.",
            "minLength": 1
          }
        },
        "required": [
          "selector",
          "artifact_type",
          "extract_from"
        ],
        "dependencies": {
          "extract_from": {
            "oneOf": [
              {
                "properties": {
                  "extract_from": {
                    "enum": [
                      "text"
                    ]
                  }
                }
              },
              {
                "properties": {
                  "extract_from": {
                    "enum": [
                      "attribute"
                    ]
                  },
                  "attribute_name": {
                    "type": "string"
                  }
                },
                "required": [
                  "attribute_name"
                ]
              }
            ]
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "url",
    "selectors"
  ],
  "additionalProperties": false
}
